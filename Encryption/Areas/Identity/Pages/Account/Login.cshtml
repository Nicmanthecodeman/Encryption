@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@section Styles{
    <link href="~/css/login.css" rel="stylesheet" />
}

<div id="contentRow" class="row justify-content-center">
    <div class="col-md-6 d-none d-sm-block p-0">
        <div id="amcCarousel" class="carousel slide h-100 carousel-fade" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#amcCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#amcCarousel" data-slide-to="1"></li>
                <li data-target="#amcCarousel" data-slide-to="2"></li>
                <li data-target="#amcCarousel" data-slide-to="3"></li>
                <li data-target="#amcCarousel" data-slide-to="4"></li>
                <li data-target="#amcCarousel" data-slide-to="5"></li>
            </ol>
            <div class="carousel-inner h-100">
                <div class="carousel-item active h-100">
                    <cache><img class="d-block w-100 h-100" src="~/images/login/1.jpg" alt="First slide"></cache>
                </div>
                <div class="carousel-item h-100">
                    <img class="d-block w-100 h-100" src="~/images/login/2.jpg" alt="Second slide">
                </div>
                <div class="carousel-item h-100">
                    <img class="d-block w-100 h-100" src="~/images/login/3.jpg" alt="Third slide">
                </div>
                <div class="carousel-item h-100">
                    <img class="d-block w-100 h-100" src="~/images/login/4.jpg" alt="Fourth slide">
                </div>
                <div class="carousel-item h-100">
                    <img class="d-block w-100 h-100" src="~/images/login/5.jpg" alt="Fifth slide">
                </div>
                <div class="carousel-item h-100">
                    <img class="d-block w-100 h-100" src="~/images/login/6.jpg" alt="Sixth slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#amcCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#amcCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="col-sm-12 col-md-6 bg-light">
        <div class="row h-100 justify-content-center align-items-md-center">
            <div class="col-sm-12 col-md-8 col-lg-8 col-xl-8">
                <section>
                    <form id="account" method="post" class="border p-4 m-4">
                        <h4 class="h-4 text-primary">Log in</h4>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control setFocus" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-sign-in-alt mr-1"></i>Log in</button>
                            <hr />
                        </div>
                        <div class="form-group">
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

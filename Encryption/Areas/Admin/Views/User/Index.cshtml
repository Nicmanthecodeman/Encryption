@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Users</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register"><i class="fas fa-plus mr-2"></i>Create New User</a>            
        </div>
    </div>

    <br />
    <div class="p-4 border rounded">
        <table id="tblData" class="table table-sm table-striped table-bordered" style="width:100%">
            <thead class="thead-dark">
                <tr class="table-info">
                    <th>Full Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Email Confirmed</th>
                    <th>Phone Number</th>
                    <th>Phone Number Confirmed</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@section Scripts{
    <script src="~/js/Admin/user.js"></script>
}